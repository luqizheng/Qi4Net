@{
    ViewBag.Title = "Simple submit jquery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.json.min.js")" type="text/javascript"></script>
<fieldset class="">
    <legend>Simple submit by jquery.json.js </legend>
    <div class="display-label">
        Name:
        <input id="name" value="name-test" />
    </div>
    <div class="display-label">
        Email:
        <input id="email" value="email-test" />
    </div>
    <div>
        <button id="getSubmit" type="button">
            submit</button>
    </div>
</fieldset>
result:
<p id="result">
</p>
<script type="text/javascript">
    $("#getSubmit").click(function () {
        var data = {
            name: $("#name").val(),
            email: $("#email").val()
        };
        $.post("@Url.Action("PureJsonTest")", $.toJSON(data), function(e) {
            $("#result").html(e);
        });
    });
</script>
